{
    "compilerOptions": {
        "allowJs": true,
        "experimentalDecorators": true,
        "target": "es5",
        "skipLibCheck": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "preserve"
    },
     "sourceMap": true,
    "include": [
        "src/**/*"
    ],
}
